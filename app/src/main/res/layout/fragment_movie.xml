<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="432dp"
        android:layout_height="250dp"
        android:background="#AEA7AE"

        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-23dp"/>


    <ImageView
        android:id="@+id/movie_poster_image_view"
        android:layout_width="155dp"
        android:layout_height="191dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/github"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/movie_title_text_view"
        android:layout_width="362dp"
        android:layout_height="35dp"
        tools:text="Movie title"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        android:layout_alignBottom="@+id/movie_poster_image_view"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_poster_image_view"/>

    <TextView
        android:id="@+id/movie_ratings_text_view"
        android:layout_width="358dp"
        android:layout_height="30dp"
        tools:text="Ratings"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_poster_image_view"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="17dp"/>

    <TextView
        android:id="@+id/movie_language_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Movie language here"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movie_ratings_text_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.233"
        app:layout_constraintLeft_toLeftOf="parent"
        />






</android.support.constraint.ConstraintLayout>